import java.util.*;
class aditya
{
 public static void main(String args[])
 {
  Scanner in=new Scanner(System.in);
  int n;
  System.out.println("N="); //N=4
  n=in.nextInt();
  for(int i=1;i<=n;i++)
  {
   for(int j=1;j<=i;j++)
   {
    System.out.print("*");
   }
   System.out.println("\n");
  }
  for(int i=1;i<=n;i++)
  {
   for(int j=i;j<=n;j++)
   {
    System.out.print("*");
   }
   System.out.println("\n");
  }
 }
}


OUTPUT:
*

**

***

****

****

***

**

*
